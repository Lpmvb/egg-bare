{
  "name": "egg-bare",
  "version": "1.0.0",
  "description": "egg-bare",
  "private": true,
  "dependencies": {
    "egg": "^2.11.2",
    "egg-alinode": "^2.0.1",
    "egg-cors": "^2.1.0",
    "egg-scripts": "^2.9.1",
    "egg-sequelize": "^4.1.0",
    "egg-validate": "^1.1.1",
    "mysql2": "^1.6.1",
    "sequelize-cli": "^4.1.1"
  },
  "devDependencies": {
    "autod": "^3.0.1",
    "autod-egg": "^1.0.0",
    "egg-bin": "^4.9.0",
    "egg-ci": "^1.9.2",
    "egg-mock": "^3.20.1",
    "eslint": "^4.11.0",
    "eslint-config-egg": "^6.0.0",
    "eslint-config-prettier": "^2.10.0",
    "husky": "^1.0.0-rc.15",
    "lint-staged": "^7.3.0",
    "prettier": "^1.14.3",
    "webstorm-disable-index": "^1.2.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-bare",
    "stop": "egg-scripts stop --title=egg-bare",
    "docker": "egg-scripts start --title=egg-bare --port=80",
    "dev": "egg-bin dev",
    "debug": "egg-bin debug",
    "test": "npm run lint -- --fix && npm run test-local",
    "test-local": "egg-bin test",
    "cov": "egg-bin cov",
    "lint": "eslint .",
    "ci": "npm run lint && npm run cov",
    "autod": "autod",
    "db:init": "npm run migrate:up && npm run seed:up",
    "migrate:new": "sequelize migration:create --name",
    "migrate:up": "sequelize db:migrate",
    "migrate:down": "sequelize db:migrate:undo",
    "seed:up": "sequelize db:seed:all",
    "seed:down": "sequelize db:seed:undo:all",
    "format": "prettier --write \"**/*.js\""
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "",
  "license": "MIT"
}
